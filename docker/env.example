# md-roam-server 環境変数設定例
# このファイルを .env にコピーして使用してください

# REST API ポート
REST_API_PORT=8080

# org-roam-ui ポート
ORG_ROAM_UI_PORT=35901

# 設定ファイルのパス（オプション）
# MD_ROAM_CONFIG_FILE=/path/to/custom/config.yml

# Traefik ポート（productionプロファイル使用時）
TRAEFIK_PORT=80

# Traefik ダッシュボード ポート（productionプロファイル使用時）
TRAEFIK_DASHBOARD_PORT=8081

# Prometheus ポート（monitoringプロファイル使用時）
PROMETHEUS_PORT=9090

# 開発環境用設定例
# REST_API_PORT=3000
# ORG_ROAM_UI_PORT=3001
# MD_ROAM_CONFIG_FILE=./config/dev.yml

# 本番環境用設定例
# REST_API_PORT=80
# ORG_ROAM_UI_PORT=443
# TRAEFIK_PORT=8080
# TRAEFIK_DASHBOARD_PORT=8081
# MD_ROAM_CONFIG_FILE=./config/production.yml
